@model PluralSightRestaurantAPI.ViewModels.HomeIndexViewModel

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    <h1>@Model.CurrentMessage</h1>
    <table>
        @foreach (var resturant in Model.Restaurants)
        {
            <tr>
                <td>@resturant.Id</td>
                <td>@resturant.Name</td> 
                <td>
                    <a href="/home/details/@resturant.Id">Details</a>
                    @Html.ActionLink("Go", "Details", "Home", new { id =resturant.Id })
                    <a asp-action="Details" asp-route-id="@resturant.Id">More</a>
                </td>
            </tr>
        }
    </table>
    <a asp-action="Create">Add Restaurant</a>
</body>
</html>